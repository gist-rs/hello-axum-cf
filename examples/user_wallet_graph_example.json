{
  "description": "Example payloads for creating a user, a wallet, and linking them in the generic KnowledgeGraphDO. Node and edge IDs would be generated by the DO or client.",
  "steps": [
    {
      "step": 1,
      "operation": "Create User Node",
      "method": "POST",
      "path_on_do": "/nodes",
      "payload_to_do": {
        "type": "UserProfile",
        "data": {
          "email": "test_user@example.com",
          "displayName": "Test User",
          "registeredAt": "2023-10-26T10:00:00Z"
        }
      },
      "note": "The DO will return the full node object including its generated 'id'."
    },
    {
      "step": 2,
      "operation": "Create Wallet Node",
      "method": "POST",
      "path_on_do": "/nodes",
      "payload_to_do": {
        "type": "CryptoWallet",
        "data": {
          "address": "0xAbCdEf1234567890123456789012345678901234",
          "blockchain": "Ethereum",
          "label": "Main ETH Wallet",
          "addedAt": "2023-10-26T10:05:00Z"
        }
      },
      "note": "The DO will return the full node object including its generated 'id'."
    },
    {
      "step": 3,
      "operation": "Link User to Wallet",
      "method": "POST",
      "path_on_do": "/edges",
      "payload_to_do": {
        "type": "OWNS_ASSET",
        "source_node_id": "<user_node_id_from_step_1>",
        "target_node_id": "<wallet_node_id_from_step_2>",
        "data": {
          "relationship_label": "Primary Wallet",
          "linkedAt": "2023-10-26T10:05:00Z"
        }
      },
      "note": "Client needs to substitute IDs from previous steps. The DO returns the full edge object."
    },
    {
      "step": 4,
      "operation": "Query User's Wallets",
      "method": "GET",
      "path_on_do_template": "/nodes/<user_node_id_from_step_1>/related?edge_type=OWNS_ASSET&direction=outgoing",
      "note": "This would return an array of nodes (the CryptoWallet node in this case)."
    }
  ]
}
